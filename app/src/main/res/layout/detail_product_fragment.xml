<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detailProduct.DetailProductFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="2dp"
        app:menu="@menu/like"
        app:navigationIcon="@drawable/retour" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small_padding"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageproduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/recom_8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.333"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="Booba Homme"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/prix"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="5000Fcfa"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#373b54"
                            android:textAlignment="center"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Les points forts"
                    android:textAlignment="center"
                    android:fontFamily="serif"
                    android:textColor="@color/bleue_foncer"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/descriptionproduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toujours frais pour les occasions de fete en famille, Quatre couleurs disponible..."
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:paddingLeft="11dp"
                    android:textSize="17dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/svoir_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Savoir plus"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textAlignment="center"
                android:textColor="@color/rouge" />

            <Button
                android:id="@+id/addtopanier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/svoir_plus"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_button_valider"
                android:text="Ajouter au panier"
                app:backgroundTint="@color/bleue" />
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>

</LinearLayout>