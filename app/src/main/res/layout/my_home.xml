<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.myHome.MyHome">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="3dp"
        app:menu="@menu/rech"
        app:navigationIcon="@drawable/retour">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes Produits"
            android:textAlignment="center"
            android:textColor="@color/bleue"
            android:textSize="21dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        app:tabTextAppearance="@style/MyCustomTabText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:overScrollMode="never"
        app:tabBackground="@drawable/backgrounditem"
        app:tabSelectedTextColor="@color/bleue_foncer"
        app:tabMaxWidth="0dp"
        app:tabPaddingEnd="24dp"
        app:tabPaddingStart="24dp"
        app:tabGravity="center"
        app:tabRippleColor="@null"
        app:tabIndicatorHeight="0dp"

        tools:ignore="MissingConstraints">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tous" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nouveau" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CatÃ©gories" />
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>