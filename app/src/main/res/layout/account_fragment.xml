<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.account.AccountFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="3dp"
        app:subtitleTextColor="@color/black"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textprofil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:textAlignment="center"
            android:textColor="@color/bleue"
            android:textSize="22sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_color="@color/connexion"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                android:src="@drawable/profil" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif"
                        android:text="Chola Patrick"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="28dp"
                        android:textStyle="bold" />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="chola@gmail.com"
                        android:textAlignment="center"
                        android:textColor="#616161"
                        android:textSize="19dp"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="voir plus"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                    <!--suppress AndroidUnresolvableTag -->
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />

                    <Button
                        android:layout_width="220dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="7dp"
                        android:background="@drawable/round_button_valider"
                        android:text="Editer Profile"
                        android:layout_gravity="center"
                        app:backgroundTint="@color/bleue" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content de vente"
                android:textSize="20dp"
                android:background="#E6E6E6"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="11dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m_40"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/favorite_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/favorite"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/favorite"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="50dp"
                            android:text="Favories"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <ImageView
                            android:id="@+id/favorite_go"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_retour"
                            android:layout_marginLeft="178dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m_40"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/my_products_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/mes_produits_profile"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/my_products"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="50dp"
                            android:text="Mes produits"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="178dp"
                            android:src="@drawable/profile_retour" />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m_40"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/add_product_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/add_produits_profile"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/addproduct"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="50dp"
                            android:text="Ajouter produits"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_retour"
                            android:layout_marginLeft="178dp" />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m_40"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:id="@+id/history_product_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/history_produits_profile"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/history_product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="50dp"
                            android:text="Historique produit"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_retour"
                            android:layout_marginLeft="178dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/m_40"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/wallet_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/portfeuile_produits_profile"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/wallet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:paddingLeft="50dp"
                            android:text="Mon Portefeuille"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/profile_retour"
                            android:layout_marginLeft="178dp" />
                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/m_40"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        >


                        <ImageView
                            android:id="@+id/disconnet_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/logout_produits_profile"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/disconnet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="50dp"
                            android:text="Me Deconnecter"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </RelativeLayout>




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>